{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "import/extensions": [
            "error",
            "ignorePackages", {
                "js": "always"
            }
        ]
    },
    "ignorePatterns": ["webpack.config.js", "node_modules/","dist/"]
}